	// method actionPerformed() 
	// to get the action performed 
	// by the user and act accordingly 
	 public class Regi implements ActionListener{
			public void actionPerformed(ActionEvent ev) {
				try {
					oos.writeObject("Register");
					if (term.isSelected()) { 
						String uname,mail,pass,type; 
						String uname = tname.getText();
						mail=temail.getText();
						pass=tpass.getText();
						if (male.isSelected()) 
							{data1 = "C" ;type="Comertial";}
						else
						{	data1 = "R"; type="Residential";}
						String data2=(String)date.getSelectedItem() + "/" + (String)month.getSelectedItem() 
						+ "/" + (String)year.getSelectedItem() ; 

						String data3 = tadd.getText(); 
						tout.setText("Name="+data+"\n"+"MobileNo="+mobile+"\n"+"Password="+pass+"\n"+
										"Type="+type + "\n" + 
										"DOB="+data2+"\n" +
										"Address="+data3 + "\n" ); 
						tout.setEditable(false); 
						if(	
								data.length()>=3 &&
								mobile.length()==10 &&
								email.length()>=3 &&
								pass.length()>=3 &&
								data3.length()>=3
								
							) {
						clientOutputStream.writeObject(data);
						clientOutputStream.writeObject(mobile);
						clientOutputStream.writeObject(email);
						clientOutputStream.writeObject(pass);
						clientOutputStream.writeObject(data1);
						clientOutputStream.writeObject(data2);
						clientOutputStream.writeObject(data3);
						
						String reply=(String)clientInputStream.readObject();
						
						if(!reply.equals("-1")){
							Register.id=reply;
							JOptionPane.showMessageDialog(null, "Registration Successful!!\nPlease remember this id="+reply);
							new Login1();
							setVisible(false);
						}else {
							JOptionPane.showMessageDialog(null, "Oops!!! Something went wrong!!");
							new Register();
							setVisible(false);
						}
					}
						else {
							JOptionPane.showMessageDialog(null, "All fields are mandatory");
							setVisible(false);
							new Register();
						}
						
					} 
					else { 
						JOptionPane.showMessageDialog(null, "Please select Terms & Conditions");
						setVisible(false);
						new Register();
					} 
					
					
					
					
					
				} catch (IOException | ClassNotFoundException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}
	 public class Res implements ActionListener{
			public void actionPerformed(ActionEvent ev) {
				String def = ""; 
				tname.setText(def); 
				tadd.setText(def); 
				tmno.setText(def); 
				res.setText(def); 
				tout.setText(def); 
				term.setSelected(false); 
				date.setSelectedIndex(0); 
				month.setSelectedIndex(0); 
				year.setSelectedIndex(0); 
				resadd.setText(def); 
			}
		}
	 
} 

